<div class = "main">
	<div class="cloud_tags">
		<div class="tags">
			<% @tags.each do |tag| %>
			<%= link_to tag.title, tag_path(:id => tag.id), class: 'tag tag-primary' %>
			<%end%>
		</div>
	</div>
	<div class = "start_reviews">
		<div class="home_head_posts"><p class="home_head_posts_p"><%= t('.latest')%></p></div>
		<div class = "start_reviews_new">
			<% @posts_latest.each do |post| %>
			<div class="card">
				<div class = "rate name">
					<p><%=t('.name')%> : <%= post.name %></p>
					<p><%=t('.rate')%> : <%= post.rate %>/5</p>
				</div>
				<p><%=t('.tags')%> : <%= raw post.tags.map{ |t| link_to t.title,tag_path(:id => t.id), class: 'tag tag-primary'}.join(' ')%></p>
				<p><%=t('.content')%> : <%= post.rich_content%></p>
				<p><%=t('.mark')%> : <%= post.mark %>/10</p>
				<% @post_show = '/posts/'+post.id.to_s%>					
				<%= link_to t('.show'), @post_show %>
			</div>
			<% end %>
		</div>
		<div class="home_head_posts"><p class="home_head_posts_p"><%= t('.rated')%></p></div>
		<div class = "start_reviews_new">
			<% @posts_rated.each do |post| %>
				<div class="card">
					<div class = "rate name">
						<p><%=t('.name')%> : <%= post.name %></p>
						<p><%=t('.rate')%> : <%= post.rate %>/5</p>
					</div>
					<p><%=t('.tags')%> : <%= raw post.tags.map{ |t| link_to t.title, tag_path(:id => t.id), class: 'tag tag-primary'}.join(' ')%></p>
					<p><%=t('.content')%> : <%= post.rich_content%></p>
					<p><%=t('.mark')%> : <%= post.mark %>/10</p>
					<% @post_show = '/posts/'+post.id.to_s%>					
					<%= link_to t('.show'), @post_show %>
				</div>
			<% end %>
		</div>
	</div>
</div>