<h1>Hello, <%=current_user.username%></h1>
 <p><%= link_to 'back to admin panel', admin_index_path %></p>
<div>
	<p>All Likes : <%= @likes.count || 0 %></p>
</div>
<%= link_to 'Create new post' , '/admin/posts/new' %>
<div>
	<ul>
		<% @posts.each do |post|%>
			<div>
				<li> Name : <%= post.name %></li>
				<li> Tags : <%= post.tags %></li>
				<li> Published : <%= post.published %> </li>
				<%= link_to 'Show', `admin/posts/#{post.id}`%>
				<%= link_to 'Edit post', `admin/posts/#{post.id}/edit`  %>
				<%= link_to 'Delete post', post_path(:id => post.id), method: :delete %>
			</div>			
		<% end%>
	</ul>
	<div class = "back">
		<%= link_to 'Back to search', '/'%>
	</div>
</div>