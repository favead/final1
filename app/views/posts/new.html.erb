<div class="new_post"><h2 class="posts_new_h2"><%= t('.new_post')%></h2></div>
<%= form_with url:posts_path(:user_id => @user.id), method: :post do |form|%>
	<%= form.hidden_field :user_id, value: @user.id%>
	<%= form.hidden_field :content, value: ""%>
	<div class = "field">
		<%= form.label t('.name') %>
		<%= form.select :name, ['Book','Game','Moovie']%>
	</div>
	<div class = "field">
		<%= form.label t('.content')%>
		<%= form.rich_text_area :rich_content%>
	</div>
	<div class = "field_tags">
		<%= form.label :tagging%>
		<%= form.text_field :tagging%>
	</div>
	<div class = "field">
		<%= form.label :published%>
		<%= form.check_box :published%>
	</div>
	<div class = "field">
		<%= form.label :mark%>
		<%= form.number_field :mark, max: 10%>
	</div>
	<div class = "actions">
		<%= form.submit t('.create')%>
	</div>
<%end%>